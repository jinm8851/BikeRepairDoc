<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3DFFFFFF"
    android:backgroundTint="#FFEB3B"
    tools:context=".MainFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="구입날짜"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/start_date"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bikeName"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="#328552E1"
        android:gravity="center"
        android:hint="버그만"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#703BE1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="애칭"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/bikeName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/start_date"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="#328552E1"
        android:gravity="center"
        android:hint="2000-01-01"
        android:inputType="date"
        android:textAlignment="center"
        android:textColor="#703BE1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recyclerView"
        android:layout_width="380dp"
        android:layout_height="179dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:background="#32E1DF52"
        android:fadingEdge="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note" />

    <EditText
        android:id="@+id/km"
        android:layout_width="61dp"
        android:layout_height="23dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:background="#328552E1"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="viewEnd"
        android:textColor="#703BE1"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/repair_date"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:background="#328552E1"
        android:gravity="center"
        android:hint="0"
        android:inputType="numberSigned|number"
        android:textAlignment="viewEnd"
        android:textColor="#703BE1"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/planets_spinner"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="14dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="원"
        android:textColor="#256A80"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planets_spinner" />

    <EditText
        android:id="@+id/note"
        android:layout_width="227dp"
        android:layout_height="41dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:background="#328552E1"
        android:gravity="center"
        android:hint="기타"
        android:inputType="textPersonName"
        android:textColor="#703BE1"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/km" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Km"
        android:textColor="#256A80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/km"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/spinner_content"
        android:layout_width="42dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:gravity="center"
        android:text="금액"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/amount"
        app:layout_constraintTop_toBottomOf="@+id/planets_spinner" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="65dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="주행거리"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="195dp"
        android:layout_height="23dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="16dp"
        android:background="#328552E1"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="85dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="수리 날짜"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bikeName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="기타"
        android:textAlignment="center"
        android:textColor="#256A80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repair_date" />

    <EditText
        android:id="@+id/repair_date"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#328552E1"
        android:gravity="center"
        android:hint="2000-01-01"
        android:inputType="date"
        android:textColor="#703BE1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/content"
        android:layout_width="329dp"
        android:layout_height="29dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:gravity="center"
        android:text="참고"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/reference"
        android:layout_width="376dp"
        android:layout_height="228dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center|top"
        android:text="@string/reference"
        android:textColor="#256A80"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#328552E1"
        android:text="저장"
        android:textColor="#703BE1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount" />

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="108dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:background="#32E1DF52"
        android:gravity="center_vertical"
        android:hint="0"
        android:textColor="@color/text"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/main_recyclerView"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:text="합계"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/totalAmount"
        app:layout_constraintTop_toBottomOf="@+id/main_recyclerView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="원"
        android:textAlignment="center"
        android:textColor="#256A80"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>